# ====================================
# Notion API
# ====================================
# Notion Integration Token (https://www.notion.so/my-integrations)
NOTION_API_KEY=secret_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Notion Database ID (견적서 데이터베이스)
NOTION_DATABASE_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx


# ====================================
# JWT Authentication
# ====================================
# JWT 서명용 비밀 키 (openssl rand -base64 32로 생성)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars


# ====================================
# Admin Credentials
# ====================================
# 관리자 로그인 정보
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password


# ====================================
# Sentry (Error Monitoring)
# ====================================
# Sentry DSN (https://sentry.io/)
# 프로젝트 생성 후 Settings > Client Keys (DSN)에서 확인
NEXT_PUBLIC_SENTRY_DSN=https://xxxxxxxxxxxxx@xxxxxx.ingest.sentry.io/xxxxxxx

# Sentry 조직명 (소스맵 업로드용 - 선택)
SENTRY_ORG=your-organization-name

# Sentry 프로젝트명 (소스맵 업로드용 - 선택)
SENTRY_PROJECT=invoice-web

# Sentry Auth Token (빌드 시 소스맵 업로드용 - 선택)
# Settings > Auth Tokens에서 생성
# SENTRY_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx


